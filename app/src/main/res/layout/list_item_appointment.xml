<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="14dp">

    <ImageView
        android:id="@+id/patientImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/baseline_local_hospital_24"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:fontFamily="@font/dinroundpro_bold"
            android:id="@+id/patientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Name"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:fontFamily="@font/dinroundpro_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booked an Session for"
            android:textSize="14sp"/>

        <TextView
            android:fontFamily="@font/dinroundpro_medium"
            android:id="@+id/sessionDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 Dec 2023|6:00 PM"
            android:textSize="14sp"/>
    </LinearLayout>

    <Button
        android:backgroundTint="#00BDC5"
        android:id="@+id/viewNowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"/>
</LinearLayout>
