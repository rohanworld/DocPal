<!-- list_item_doctor_for_chat.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/doctorImageForChat"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_local_hospital_24" />

    <TextView
        android:id="@+id/doctorNameForChat"
        android:layout_width="248dp"
        android:gravity="center_vertical"
        android:text="Dr. Name Comes Here"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="71dp"
        android:layout_toEndOf="@id/doctorImageForChat"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
