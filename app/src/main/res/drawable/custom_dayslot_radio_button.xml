<!-- res/drawable/custom_radio_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unchecked state -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color when unchecked -->
            <corners android:radius="8dp" /> <!-- Adjust the radius to control the square shape -->
            <stroke android:width="2dp" android:color="#000000" /> <!-- Border color and width -->
            <padding
                android:left="6dp"
                android:top="2dp"
                android:right="6dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#00BDC5" /> <!-- Background color when checked -->
            <corners android:radius="8dp" /> <!-- Adjust the radius to control the square shape -->
            <stroke android:width="2dp" android:color="#000000" /> <!-- Border color and width -->
            <padding
                android:left="6dp"
                android:top="2dp"
                android:right="6dp"
                android:bottom="2dp" />

        </shape>
    </item>
</selector>
